<body>
        <%- include("header")%>
        <div class="detail">
            <div class="bookTop">
                <div class="bookDetail">
                    <div class="bookD">
                            <img src="<%- book.images.large%>" alt="">
                            <div class="bookDetailR">
                                <h2><%- book.title%></h2>
                                <ul>
                                    <li>图书名称：<%- book.title%></li>
                                    <li>著译者：<%- book.author[0]%></li>
                                    <li>出版社：<%- book.publisher%></li>
                                    <li>图书价格：<%- book.price%></li>
                                    <li>索书号：<%- book.isbn10%></li>
                                    <li>出版时间：<%- book.pubdate%></li>
                                </ul>
                            </div>
                    </div>
                    <div class="contentIntro content">
                        <h3>内容简介......</h3>
                        <p style="text-indent:2em;line-height:30px;font-size:12px;margin-top:5px;">
                            <%- book.summary%>
                        </p>
                    </div>
                    <div class="authorIntro content">
                            <h3>作者简介......</h3>
                            <p style="text-indent:2em;line-height:30px;font-size:12px;margin-top:5px;">
                                <%- book.author_intro %>
                            </p>
                        </div>
                </div>
            </div>
            <div class="bookComment">
                <button type="button" id="announce"><a>说点什么好呢？</a></button>
                <div class="top">
                    <h2>短评......</h2>
                </div>
                <ul>
                    <li id="QSF">
                        <p>抢沙发.....</p>
                    </li>
                    <li>
                        <p><em><%- readerinfo.username%></em>看过<time><%- readerinfo.date%></time></p>
                        <p></p>
                    </li>
                </ul>
            </div>
            <!-- action="/list?id=<%- book.id%>" method="post"  -->
            <form id="commentForm">
                <h6>短评...... <i id="closed">×</i></h6>
                <label for="">
                    <textarea name="content" id="content"></textarea>
                </label>
                <label for="">
                    <input type="button" value="发表" id="announceSubmit" onclick="commentPost()">
                </label>
            </form>
        </div>
     
