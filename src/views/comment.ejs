<script>
    $(function(){
        var commentForm = $('#commentForm');
        var announce = $('#announce');
        var closed = $('#closed');
        announce.click(()=>{
            commentForm.css({
                display:"block"
            })
        })
        closed.click(()=>{
            commentForm.css({
                display:"none"
            })
        })
       
     })
</script>